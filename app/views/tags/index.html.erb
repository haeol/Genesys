<div class="row">

	<div class="col-lg-12">
		<h1 class="page-header">All Tags</h1>
	</div>

	<% Tag.all.limit(50).each do |tag| %>
		<div class="col-lg-3 col-md-4 col-xs-6 thumb">
			<div class="thumbnail text-center">
				<img class="img-responsive" src="http://placehold.it/400x300" alt="">
				<div class="caption">
					<p><%= tag.name %></p>
				</div>
			</div>
		</div>
	<% end %>

</div>


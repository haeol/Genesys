<!-- TODO this post part is pretty ugly -->
<%= link_to '', :back, {:class => 'glyphicon glyphicon-circle-arrow-left'} %>
<div class="container">
    <div class="row">
        <div class="media col-xs-9">
              <div class="media-body">
                  <%= link_to '', :back, {:href => post.url, :target => '_blank', :class => 'glyphicon glyphicon-link'} %>
                  <span class="post-heading">
                  <%= post.name %> </span>
              </div>


            <div class="container">
              <div class="post-comments">

                <% if current_user %>
                    <%= render 'comments/form', post: post, comment: Comment.new %>
                <% end %>
                <% post.comments.each do |comment| %>
                <!--<div class="container">
                <div class="row">-->
                <div class="col-md-8">
                  <h2 class="page-header">
                  <i class="fa fa-sticky-note" aria-hidden="true"></i>Comments</h2>
                    <section class="comment-list">
                      <!-- First Comment -->
                      <article class="row">
                        <div class="col-md-2 col-sm-2 hidden-xs">
                          <figure class="thumbnail">
                            <img class="img-responsive" src="http://www.keita-gaming.com/assets/profile/default-avatar-c5d8ec086224cb6fc4e395f4ba3018c2.jpg" />
                            <figcaption class="text-center"><%= comment.username %></figcaption>
                          </figure>
                        </div>
                        <div class="col-md-10 col-sm-10">
                          <div class="panel panel-default arrow left">
                            <div class="panel-body">
                              <header class="text-left">
                                <div class="comment-user"><i class="fa fa-user" aria-hidden="true"></i> <%= comment.username %> </div>
                                <time class="comment-date" datetime="16-12-2014 01:05"><i class="fa fa-clock-o"></i> <%= "#{post.submit_time_diff} by #{post.poster}" %></time>
                              </header>
                              <div class="comment-post">
                                <i class="fa fa-comment comment-post"></i>
                                  <%= comment.description %>
                              </div>
                            <!-- <p class="text-right"><a href="#" class="btn btn-default btn-sm"><i class="fa fa-reply"></i> reply</a></p> -->
                            </div>
                          </div>
                        </div>
                      </article>
                    </section>
                </div>


                <% end %>

              </div>
              <!-- post-comments -->
            </div>
        </div>
        <% if current_user %>
        <div class="col-xs-3 friends-sidebar-container">
            <div class="friends-sidebar">
                <div class="well">
                    <ul class="nav ">
                        <h4>Share with Friends</h4>
                        <%= form_for :friend_feed, :url => friend_feeds_path(friend_id: current_user, post_id: post.id), method: :post do |f| %>
                            <% current_user.friends.each do |friend| %>
                                <li>
                                <div class="btn-group" data-toggle="buttons">

                                <label class="btn btn-primary">
                                <%= check_box_tag "friends[]", friend.id, false, class: "btn btn-default"%>
                                <%= friend.username %>
                                </label>
                                </div>

                                </li>
                            <% end %>

                            <%= f.submit "Share", class: "btn btn-default"%>
                        <% end %>

                    </ul>
                </div>
                <!--/.well -->
            </div>
            <!--/sidebar-nav-fixed -->
        </div>
        <% end %>
        <!-- end friends sidebar -->

    </div>
</div>

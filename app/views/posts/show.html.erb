<!-- TODO this post part is pretty ugly -->
<div class="container">
    <div class="row">
        <div class="media col-xs-9">
              <div class="media-body">
                <h2 class="media-heading">
            	  <%= post.name %>
            	</h2>
                </br>
                <!-- embedded stuff -->
                <%= post.html %>
                <!-- end embedded stuff -->
                </br>

            	<%= post.description %>
            	</br>
            	<%= link_to post.url, post.url %>
            	</br>
            	<p> <%= "#{post.submit_time_diff} by #{post.poster}" %> </p>

              </div>


            <div class="container">
              <div class="post-comments">

                <% if current_user %>
                    <%= render 'comments/form', post: post, comment: Comment.new %>
                <% end %>
                <% post.comments.each do |comment| %>
                  <div class="media">
                    <%= comment.username %>

                    <div class="media-body">
                      <p> <%= comment.description %> </p>
                    </div>
                  </div>
                <% end %>

              </div>
              <!-- post-comments -->
            </div>
        </div>
        <% if current_user %>
        <div class="col-xs-3 friends-sidebar-container">
            <div class="friends-sidebar">
                <div class="well">
                    <ul class="nav ">
                        <h4>Share with Friends</h4>
                        <%= form_for :friend_feed, :url => friend_feeds_path(friend_id: current_user, post_id: post.id), method: :post do |f| %>
                            <% current_user.friends.each do |friend| %>
                                <li>
                                <div class="btn-group" data-toggle="buttons">

                                <label class="btn btn-primary">
                                <%= check_box_tag "friends[]", friend.id, false, class: "btn btn-default"%>
                                <%= friend.email %>
                                </label>
                                </div>

                                </li>
                            <% end %>

                            <%= f.submit "Share", class: "btn btn-default"%>
                        <% end %>

                    </ul>
                </div>
                <!--/.well -->
            </div>
            <!--/sidebar-nav-fixed -->
        </div>
        <% end %>
        <!-- end friends sidebar -->

    </div>
</div>
